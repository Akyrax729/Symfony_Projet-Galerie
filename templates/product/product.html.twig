{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block main %}
    <div class="filter">
        <section id="form">
            {{form_start(filterForm)}} 
                {{form_widget(filterForm)}}
                <button>Filtrer</button>
            {{form_end(filterForm)}}
        </section>
    </div>
    <section id="preview">
        {% for product in products %}

            <div class="card">
                <a href=" {{ path('app_product_view', {'id':product.id}) }} ">
                    <h2> {{ product.label }} </h2>
                    <img src="{{asset('images/'~product.imagename)}}" alt="{{product.label}}">
                    <p> {{ product.description|slice(0, 30)~'...' }} </p>
                    <div>
                        {% for tags in product.tags %}
                            
                                <span> {{ tags.label }} </span>
                            
                        {% endfor %}</div>

                        <p> {{ product.estimatedprice }}â‚¬ </p>
                </a>
            </div>
            
        {% endfor %}
        
    </section>

    {% if app.user != NULL %}
            <a href="{{path ('app_product_add')}}">Ajouter un objet</a>
    {% endif %}
{% endblock %}
